name: Selenium Test with Video Recording

on:
  push:
    branches:
      - main
  pull_request:

jobs:
  selenium:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v3

    - name: Set up Java
      uses: actions/setup-java@v3
      with:
        distribution: temurin
        java-version: '17'   # or the Java version you use

    - name: Set up Chrome
      uses: browser-actions/setup-chrome@v1

    - name: Install dependencies
      run: mvn clean install

    - name: Run Selenium tests with video recording
      run: |
        mkdir -p test-videos
        xvfb-run -a -s "-screen 0 1920x1080x24" mvn test \
          -Dvideo.path=test-videos

    - name: Upload video artifact
      uses: actions/name: Selenium Test with Video Recording

